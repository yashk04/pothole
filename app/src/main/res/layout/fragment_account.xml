    <!--                android:id="@+id/txtemail"-->
    <!--                android:layout_width="match_parent"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:ems="10"-->
    <!--                android:editable="false"-->
    <!--                android:textSize="30sp" />-->
</LinearLayout>